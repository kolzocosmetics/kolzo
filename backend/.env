# Server Configuration
NODE_ENV=development
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kolzo
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/kolzo

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@kolzo.in

# Email Octopus Configuration
EMAIL_OCTOPUS_API_KEY=your-email-octopus-api-key
EMAIL_OCTOPUS_LIST_ID=your-list-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# UPI Configuration
UPI_MERCHANT_ID=your-upi-merchant-id
UPI_MERCHANT_KEY=your-upi-merchant-key

# Crypto Payment Configuration
CRYPTO_API_KEY=your-crypto-api-key
CRYPTO_WEBHOOK_SECRET=your-crypto-webhook-secret

# Wise Configuration
WISE_API_KEY=your-wise-api-key
WISE_PROFILE_ID=your-wise-profile-id

# Instamojo Configuration
INSTAMOJO_API_KEY=your-instamojo-api-key
INSTAMOJO_AUTH_TOKEN=your-instamojo-auth-token

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Cloud Storage (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kolzo-uploads

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
TIKTOK_PIXEL_ID=your-tiktok-pixel-id

# Customer Support
TAWK_TO_WIDGET_ID=your-tawk-to-widget-id
TAWK_TO_API_KEY=your-tawk-to-api-key

# Newsletter and Marketing
GUMROAD_API_KEY=your-gumroad-api-key
GUMROAD_PRODUCT_ID=your-gumroad-product-id

# N8N Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/kolzo
N8N_API_KEY=your-n8n-api-key

# Formspree Configuration
FORMSPREE_ENDPOINT=https://formspree.io/f/your-form-id

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Production Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=300000
MONITORING_ENABLED=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Search Configuration
SEARCH_INDEX_NAME=kolzo_products
ELASTICSEARCH_URL=http://localhost:9200

# Notification Configuration
PUSH_NOTIFICATION_KEY=your-push-notification-key
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=KOLZO

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Payment Gateway Webhooks
STRIPE_WEBHOOK_URL=https://your-domain.com/api/payments/webhook/stripe
PAYPAL_WEBHOOK_URL=https://your-domain.com/api/payments/webhook/paypal
RAZORPAY_WEBHOOK_URL=https://your-domain.com/api/payments/webhook/razorpay

# External Services
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Railway Configuration
RAILWAY_TOKEN=your-railway-token
RAILWAY_PROJECT_ID=your-railway-project-id

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Domain Configuration
DOMAIN=kolzo.in
SUBDOMAIN=api.kolzo.in 